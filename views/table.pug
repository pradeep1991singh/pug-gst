doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='favicon.ico')
    title= title
    link(href='/bootstrap-3.3.7-dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/styles/dashboard.css', rel='stylesheet')

  body

    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-onlyToggle.navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

          a.navbar-brand(href='#Project') Pug

        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li(class=nav==='home' && 'active')
              a(href='/') Home
            li(class=nav==='table' && 'active')
              a(href='/table') Table
                    
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          ul.nav.nav-sidebar          
            for item, i in ['Reports', 'Analytics', 'Export']
              - var firstActive = i===0
              li(class=firstActive && 'active') 
                a(href='#')= item 
                span.sr-only(current)
          
          ul.nav.nav-sidebar
            for item in ['Nav item', 'Nav item again', 'One more nav', 'Another nav item', 'More navigation']
              li
                a(href='#')= item 
                span.sr-only(current)
          
          ul.nav.nav-sidebar
            for item in ['Nav item again', 'One more nav', 'Another nav item']
              li
                a(href='#')= item 
                span.sr-only(current)
        
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          h1.page-header #{title}

          .row.placeholders


            - for (var x = 1; x <= 4; x++)
              .col-xs-6.col-sm-3.placeholder
                img.img-responsive(src='data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==', width='200', height='200', alt='Generic placeholder thumbnail')
                h4 Label
                span.text-muted Something else

          h2.sub-headerSection title
          .table-responsive
            table.table.table-striped
              thead
                tr
                  th #
                  th Header
                  th Header
                  th Header
                  th Header

              tbody
                - for (var x = 1; x <= 16; x++)
                  tr
                    td= x
                    td Lorem
                    td ipsum
                    td dolor
                    td sit

    include partials/scripts
